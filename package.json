{
  "name": "simple-datatable-builder",
  "version": "0.0.1",
  "description": "Un package simple pour créer des tableaux de données interactifs.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --sourcemap",
    "watch": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --sourcemap --watch",
    "dev": "tsc --watch",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "datatable",
    "table",
    "javascript",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.25.2",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist"
  ]
}
